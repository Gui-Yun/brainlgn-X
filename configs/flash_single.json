{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "${BASE_DIR}/results/flash_single"
  },
  "run": {
    "frame_rate": 1000.0,
    "backend": "bmtk",
    "separable": true,
    "downsample": 1,
    "base_seed": 11
  },
  "inputs": {
    "module": "flash",
    "row_size": 120,
    "col_size": 240,
    "pre": 0.2,
    "on": 0.3,
    "off": 0.2,
    "post": 0.1,
    "max_intensity": 0.8
  },
  "neuron": {
    "spatial": {"sigma": [2.0, 2.0], "translate": [0.0, 0.0]},
    "temporal": {"weights": [0.5, -0.3], "kpeaks": [20.0, 60.0], "delays": [0, 0]},
    "amplitude": 1.5,
    "transfer": {"bias": 0.5}
  },
  "output": {
    "output_dir": "${OUTPUT_DIR}",
    "spikes_csv": "spikes.csv",
    "spikes_h5": "spikes.h5",
    "rates_h5": "rates.h5",
    "overwrite_output_dir": true
  }
}

