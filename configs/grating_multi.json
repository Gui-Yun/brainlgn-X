{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "${BASE_DIR}/results/grating_multi"
  },
  "run": {
    "frame_rate": 1000.0,
    "backend": "brainstate",
    "separable": true,
    "downsample": 1,
    "base_seed": 321
  },
  "inputs": {
    "module": "grating",
    "row_size": 120,
    "col_size": 240,
    "duration": 0.4,
    "gray_screen_dur": 0.2,
    "cpd": 0.04,
    "temporal_f": 4.0,
    "theta": 0.0,
    "contrast": 0.8
  },
  "neurons": [
    {"spatial": {"sigma": [2.0, 2.0], "translate": [0.0, 0.0]},  "temporal": {"weights": [0.6, -0.4], "kpeaks": [15.0, 45.0], "delays": [0, 0]}, "amplitude": 2.0, "transfer": {"bias": 1.0}},
    {"spatial": {"sigma": [2.0, 2.0], "translate": [4.0, 2.0]},  "temporal": {"weights": [0.6, -0.4], "kpeaks": [15.0, 45.0], "delays": [0, 0]}, "amplitude": 2.0, "transfer": {"bias": 1.0}},
    {"spatial": {"sigma": [2.0, 2.0], "translate": [8.0, 4.0]},  "temporal": {"weights": [0.6, -0.4], "kpeaks": [15.0, 45.0], "delays": [0, 0]}, "amplitude": 2.0, "transfer": {"bias": 1.0}},
    {"spatial": {"sigma": [2.0, 2.0], "translate": [12.0, 6.0]}, "temporal": {"weights": [0.6, -0.4], "kpeaks": [15.0, 45.0], "delays": [0, 0]}, "amplitude": 2.0, "transfer": {"bias": 1.0}}
  ],
  "output": {
    "output_dir": "${OUTPUT_DIR}",
    "spikes_csv": "spikes.csv",
    "spikes_h5": "spikes.h5",
    "rates_h5": "rates.h5",
    "overwrite_output_dir": true
  }
}

