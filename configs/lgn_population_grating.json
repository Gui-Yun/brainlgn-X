{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "${BASE_DIR}/results/lgn_population_grating"
  },
  "run": {
    "frame_rate": 1000.0,
    "backend": "brainstate",
    "separable": true,
    "downsample": 1,
    "base_seed": 555
  },
  "inputs": {
    "module": "grating",
    "row_size": 120,
    "col_size": 240,
    "duration": 0.5,
    "gray_screen_dur": 0.25,
    "cpd": 0.04,
    "temporal_f": 4.0,
    "theta": 0.0,
    "contrast": 0.8
  },
  "layout": {
    "X_grids": 8,
    "Y_grids": 6,
    "X_len": 240.0,
    "Y_len": 120.0
  },
  "cell_types": [
    {
      "name": "sON",
      "n_per_tile": 2,
      "spatial": {"sigma_range": [2.0, 3.0]},
      "temporal": {"weights": [0.6, -0.4], "kpeaks": [15.0, 45.0], "delays": [0, 0], "jitter_percent": 0.05},
      "amplitude_range": [1.5, 2.0],
      "transfer": {"bias_range": [0.8, 1.2]}
    },
    {
      "name": "sOFF",
      "n_per_tile": 2,
      "spatial": {"sigma_range": [2.0, 3.0]},
      "temporal": {"weights": [0.5, -0.3], "kpeaks": [20.0, 60.0], "delays": [0, 0], "jitter_percent": 0.05},
      "amplitude_range": [-2.0, -1.5],
      "transfer": {"bias_range": [0.5, 1.0]}
    },
    {
      "name": "tOFF",
      "n_per_tile": 1,
      "spatial": {"sigma_range": [2.0, 2.5]},
      "temporal": {"weights": [0.7, -0.5], "kpeaks": [25.0, 70.0], "delays": [0, 0], "jitter_percent": 0.05},
      "amplitude_range": [-2.2, -1.8],
      "transfer": {"bias_range": [0.3, 0.8]}
    }
  ],
  "output": {
    "output_dir": "${OUTPUT_DIR}",
    "spikes_csv": "spikes.csv",
    "spikes_h5": "spikes.h5",
    "rates_h5": "rates.h5",
    "overwrite_output_dir": true
  }
}

